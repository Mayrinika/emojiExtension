{
  "manifest_version": 2,
  "name": "emojiWidget",
  "description": "An extension that adds a widget with emoticons to the page",
  "version": "1.0",
  "browser_action": {
    "default_icon": "raccoon.png",
    "default_title": "Emoji widget"
  },

  "icons": {
    "16": "raccoon.png",
    "48": "raccoon.png",
    "128": "raccoon.png"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}